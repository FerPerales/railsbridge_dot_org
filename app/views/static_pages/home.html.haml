- provide(:title, page_title(['Home']))
.row
  .col-md-8
    .home-events
      %h3 Upcoming Events
      = render 'shared/events_with_help', events_per_row: 2, events: @railsbridge_events

      - if @other_events.present?
        %h3 Events from our friends
        = render 'shared/events', events_per_row: 2, events: @other_events
  .col-md-4
    .home-twitter
      %h3 Recent Tweets
      = render 'tweets'
